	<parameter name="clienteId" class="java.lang.Integer" isForPrompting="false">
		<defaultValueExpression><![CDATA[1]]></defaultValueExpression>
	</parameter>
	<queryString language="SQL">
		<![CDATA[SELECT
   SUM(i.quantidade) AS quantidade,
   (SUM(i.quantidade) * pt.custo) AS custo,
   pt.nome AS "produto.nome",
   CASE WHEN pt.tamanho=0 THEN 'GRANDE' WHEN pt.tamanho=1 THEN 'MEDIO' ELSE 'PEQUENO' END AS "produto.tamanho"
FROM pedido_item i
INNER JOIN produto pt ON pt.id_produto=i.id_produto
INNER JOIN cliente_pedido cp ON i.id_pedido=cp.id_pedido
WHERE cp.id_cliente = $P{clienteId}
GROUP BY pt.id_produto
ORDER BY "produto.nome"]]>
	</queryString>
	<field name="quantidade" class="java.lang.Long"/>
	<field name="custo" class="java.lang.Double"/>
	<field name="produto.nome" class="java.lang.String"/>
	<field name="produto.tamanho" class="java.lang.String"/>
	<variable name="produtoTamanho" class="java.lang.String" resetType="Column" incrementType="Report">
		<variableExpression><![CDATA[$F{produto.tamanho}.toString().equals( "GRANDE" ) ? "G" : $F{produto.tamanho}.toString().equals( "MEDIO" ) ? "M" : "P"]]></variableExpression>
	</variable>
